<div class= "container">



<%= render 'shared/errors', obj: @article %>


<%= form_for @article do |f| %>
  <div class= "form-group row">
    <%= f.label :title, class: "col-sm-1 col-form-label" %>
    <div class= "col-sm-8">
    <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
    </div>
  </div>

  <div class= "form-group row">
    <%= f.label :description, class: "col-sm-1 col-form-label" %>
    <div class= "col-sm-8">
    <%= f.text_area :description, class: "form-control", placeholder: "Title of article" %>
    </div>
  </div>


    <div class= "form-group row col-sm-6 col-md-6">
      <%= f.submit class: "btn btn-primary" %>
    </div>



<% end %>

<div class= "col-xs-4 col-xs-offset-4 text-center">
  [ <%= link_to "Cancel request and back to article listings", articles_path, class: "btn" %> ]

</div>
